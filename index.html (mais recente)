const iconeLibras = document.getElementById("iconeLibras");
const btnSend = document.getElementById("btnSendToLibras");
const btnClear = document.getElementById("btnClear");

/********** FUNÃ‡ÃƒO DE RENDERIZAÃ‡ÃƒO DOS GIFS **********/
function renderizarIcones(texto) {
  iconeLibras.innerHTML = "";
  const textoLower = texto.toLowerCase();
  for (let char of textoLower) {
    if (dicionario[char]) {
      const img = document.createElement("img");
      img.src = dicionario[char];
      img.alt = char;
      iconeLibras.appendChild(img);
    } else if (char === " ") {
      iconeLibras.appendChild(document.createTextNode("   "));
    } else {
      const span = document.createElement("span");
      span.textContent = char;
      iconeLibras.appendChild(span);
    }
  }
}

/********** FUNÃ‡ÃƒO PARA REMOVER CONECTIVOS **********/
function removerConectivos(frase) {
    if (!frase || typeof frase !== 'string') return '';

    const conectivos = [
      "alÃ©m disso","por causa de","ademais","outrossim","nÃ£o","sÃ³","mas","como","mesmo","modo","igualmente",
      "porÃ©m","contudo","todavia","entanto","entretanto","embora","apesar","contrapartida","pelo","contrÃ¡rio",
      "oposiÃ§Ã£o","pois","visto","conseguinte","resultado","devido","portanto","logo","assim","entÃ£o",
      "conforme","segundo","consoante","caso","certamente","decerto","enquanto","durante","finalmente",
      "e","nem","tambÃ©m","de","ainda","que","em","por","como","a","o","as","os","um","uma","uns","umas",
      "do","da","dos","das","no","na","nos","nas","para","por","com","sem","sobre","entre","ou","se",
      "ao","Ã ","Ã s","aos"
    ];
    conectivos.sort((a, b) => b.length - a.length);

    // remove pontuaÃ§Ã£o (mantÃ©m letras, nÃºmeros e espaÃ§os)
    frase = frase.replace(/[^\p{L}\p{N}\sÃ€-Å¾]/gu, ' ');

    for (const c of conectivos) {
        const esc = c.replace(/[.*+?^${}()|[\]\\]/g, '\\$&');
        const re = new RegExp(`(^|\\s)${esc}(?=\\s|$)`, 'giu');
        frase = frase.replace(re, ' ');
    }

    return frase.replace(/\s+/g, ' ').trim();
}

/********** BOTÃ•ES **********/
btnSend.addEventListener("click", () => {
  const textoRaw = asrOut.value.trim();
  if (!textoRaw) {
    recStatus.textContent = "Nenhum texto para traduzir.";
    recDot.className = "dot warn";
    return;
  }

  const textoLimpo = removerConectivos(textoRaw); // <-- limpar conectivos aqui
  renderizarIcones(textoLimpo);
  recStatus.textContent = "Texto traduzido em GIFs!";
  recDot.className = "dot ok";
});

btnClear.addEventListener("click", () => {
  asrOut.value = "";
  iconeLibras.innerHTML = "";
  finalTranscript = "";
  recStatus.textContent = "Aguardandoâ€¦";
  recDot.className = "dot";
});

/********** ATALHO CTRL+ENTER **********/
asrOut.addEventListener("keydown", (e) => {
  if (e.key === "Enter" && (e.ctrlKey || e.metaKey)) btnSend.click();
});
